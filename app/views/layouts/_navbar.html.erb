<div class="app_menu">
  <ul>
  <% if signed_in? %>
    <li><%= link_to "Home", user_path(current_user), :class => "round" %></li>
    <li><%= link_to "Register Car", new_car_path, :class => "round" %></li>
  <% else %>
    <li><%= link_to "Home", root_path, :class => "round" %></li>  <% end %>
    <li><%= link_to "View Cars", cars_path, :class => "round" %></li>
  </ul>
  <ul class="account_status">
  <% if signed_in? %>
    <li><%= h(current_user.name) %></li>
    <li><%= link_to "Sign Out", signout_path, :class => "round" %></li>
  <% else %>
    <li><a class="hovertarget signin_target round">Sign in</a></li>
    <li><%= link_to "Create Account", signup_path, :class => "round" %></li>
  <% end%>
  </ul>
</div>

<div class="hovermenu signin_layer round">
  <h2>Sign in to the Registry</h2>
  <% form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, "Pass:" %>
      <%= f.password_field :password %>
    </div>
    <div class="field text_right">
      <%= f.submit "Sign In" %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $(function() {
    $(".signin_target").click(function(event) {
      event.preventDefault();
      var dialogBox = new DialogBox($(".signin_layer").html());
      dialogBox.show();
    });
    //$(".signin_target").menuPopup(".signin_layer");
  });
</script>
