<div class="section">
  <h2>Sign In</h2>
  <% form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email, "Email:" %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, "Pass:" %>
      <%= f.password_field :password %>
    </div>
    <div class="field text_right">
      <%= f.submit "Sign In" %>
    </div>
  <% end %>
</div>